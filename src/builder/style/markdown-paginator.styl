.markdown-paginator
  display flex
  margin-top 24px
  margin-bottom 24px
  &-item
    flex 1
    &:first-child
      padding-left 1em
      text-align left
      a
        &:before
          left -.75em
          border-left-color transparent
          border-right-color #24292e

    &:last-child
      padding-right 1em
      text-align right

      a
        &:before
          right -.75em
          border-left-color #24292e
          border-right-color transparent

    p
      font-size 12px
      line-height 1.2
      color rgba(27, 31, 35, .3)
      margin-bottom 10px
    a
      position relative
      font-size 20px
      &:before
        content ''
        display block
        position absolute
        width 0
        height 0
        // background #24292e
        top 50%
        transform translateY(-50%)
        border-width .25em
        border-style solid
        border-top-color transparent
        border-bottom-color transparent
