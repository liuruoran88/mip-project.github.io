$colorGrayBlack = #24292e
$colorGray = #6a6b6c

.codelab-list-wrapper
    background #fff
    padding-top 64px
    .codelab-list-head
        width 100%
        .head-text
            max-width 1000px
            margin 0 auto
            font-size 16px
            color $colorGray

        .welcom
            display block
            font-size 24px
            margin-top 60px
            margin-bottom 20px
            color $colorGrayBlack
        p
            font-size 16px
            line-height 30px

    .codelab-list-main
        width 100%
        .main-inner-wrapper
            max-width 1000px
            margin 0 auto
            padding 50px 20px
            overflow hidden
            a
                display inline-block
                width 32%
                margin 0 2% 3% 0
                padding 0
                box-sizing border-box
                border 1px #eee solid
                text-decoration none

                &:nth-of-type(3n)
                    margin-right 0

            .lab-item
                position relative
                background #fff
                float left
                text-algin center
                height 300px
                overflow hidden

                .codelab-name-wrapper
                    background #f4f4f4
                    height 84px
                .codelab-name
                    padding 20px 20px 0 20px
                    color $colorGrayBlack
                    font-size 18px
                    text-align left
                    font-weight 400
                    overflow hidden
                    white-space nowrap
                    text-overflow ellipsis
                    ellipsis()

                .codelab-release-time
                    padding 10px 0 0 20px
                    color $colorGray
                    text-align left

                .codelab-desc
                    padding 20px
                    font-size 16px
                    height 96px
                    line-height 28px
                    font-weight 400
                    text-align left
                    color $colorGray
                    overflow hidden
                    // text-overflow ellipsis
                    // -o-text-overflow ellipsis
                    // display -webkit-box
                    // -webkit-box-orient vertical
                    // -webkit-line-clamp 4

                .more-detail
                    margin-left 20px
                    height 36px
                    line-height 36px
                    border solid #ccc 1px
                    border-radius 18px
                    width 90px
                    text-align center
                    position absolute
                    bottom 20px

@media screen and (max-width: 992px)
  margin-left 275px
  padding-left 25px
  padding-right 25px


@media screen and (max-width: 767px)
    .codelab-list-wrapper
        .codelab-list-head
            padding-bottom 20px
            .welcom
                margin-left 20px
                line-height 40px
            p
                margin 0 20px

        .codelab-list-main
            width 100%
            .main-inner-wrapper
                margin 0 auto
                box-sizing border-box
                padding 20px
                a
                    display block
                    width 100%
                    margin 0 0 30px
                .lab-item
                    width 100%

