@import './github-markdown.css'
@import './highlight.css'

.markdown-body pre
  padding-left: 3em
  position: relative


.markdown-body .code-index
  position absolute
  left 0
  width 2em
  text-align right
  // line-height 1.5
  color rgba(27, 31, 35, .3)


.markdown-body
  h1:before,
  h2:before,
  h3:before,
  h4:before,
  h5:before,
  h6:before
    content: ' '
    display block
    height 84px
    margin-top -84px
    visibility hidden

.markdown-body
  .md-p-info,
  .md-p-notice,
  .md-p-warn
    padding 1em 1em 1em 3em
    position relative
  .md-p-info
    background #ebfbee
    color #40c057
    // border 1px solid #e0f1e9
  .md-p-notice
    background #fff9db
    color #333
    // border 1px solid #eae5d6
  .md-p-warn
    background #fff5f5
    color #fa5252
    // border 1px solid #decbcb
  .iconfont
    position absolute
    top 1em
    left 1em

  @media screen and (min-width: 992px)
    .md-img-wrapper-child
      width 70%
      &:hover
        cursor pointer

  @media screen and (min-width: 768px)
    .md-img-wrapper-child
      width 60%
