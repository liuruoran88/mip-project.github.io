


.step-tabs-wrapper {
  margin-top: 64px;
  .step-head {
    width: 100%;
    background: #f8f8f8;
    padding: 60px 20px 40px;
    box-sizing: border-box;
    .step-head-inner {
      max-width: 1040px;
      margin: 0 auto;
      .title {
        font-size: 24px;
        color: #000;
        margin-bottom: 20px;
      }
      .des {
        font-size: 16px;
        color: #666;
        line-height: 30px;
      }
    }

  }
  .step-content-main {
    position: relative;
    padding-top: 30px;
    max-width: 1040px;
    margin: 0 auto;

    .step-content-wrapper {
      margin: 0 20px 40px 300px;
      .step-content-list {
        .content-item {
          display: none;
          line-height: 30px;

          &.show {
            display: block;
          }
        }
      }
    }
  }
}

@media screen and (max-width: 767px) {
  .step-tabs-wrapper {
    .step-content-main {
      .step-content-wrapper {
        margin: 0 20px 40px;
      }
    }
  }
}
