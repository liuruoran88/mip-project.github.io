.step-tabs-wrapper {
  margin-top: 64px;
  .step-head {
    width: 100%;
    background: #f8f8f8;
    padding: 60px 20px 40px;
    box-sizing: border-box;
    .step-head-inner {
      // max-width: 1040px;
      margin: 0 auto;
      .title {
        font-size: 24px;
        color: #000;
        margin-bottom: 20px;
      }
      .des {
        font-size: 16px;
        color: #666;
        line-height: 30px;
      }
    }

  }
  .step-content-main {
    position: relative;
    padding-top: 30px;
    // max-width: 1040px;
    margin: 0 auto;

    .step-content-wrapper {
      margin: 0 20px 40px 300px;
      max-width: 1000px;
      .step-content-list {
        position: relative;
        .content-item {
          display: none;
          line-height: 30px;

          &.show {
            display: block;
          }
        }
        .edit {
          position: absolute;
          width: 100px;
          height: 40px;
          line-height: 40px;
          border: 1px solid #000;
          text-align: center;
          border-radius: 20px;

          &.edit-top {
            top: 0;
            right: 0;
          }
          &.edit-bottom {
            bottom: 0;
            right: 0;
          }
        }
      }
    }
  }

}

@media screen and (max-width: 767px) {
  .step-tabs-wrapper {
    .step-content-main {
      .step-content-wrapper {
        margin: 0 20px 40px;
      }
    }
  }
}
