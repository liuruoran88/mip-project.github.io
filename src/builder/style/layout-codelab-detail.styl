.step-tabs-wrapper {
  margin-top: 60px;
  .step-head {
    width: 100%;
    background: #f8f8f8;
    padding: 60px 90px 40px;
    box-sizing: border-box;
    .step-head-inner {
      // max-width: 1040px;
      margin: 0 auto;
      .title {
        font-size: 22px;
        color: #000;
        margin-bottom: 10px;
      }
      .des {
        font-size: 16px;
        color: #666;
        line-height: 24px;
      }
    }

  }
  .step-content-main {
    margin: 0 auto;
    padding: 0 90px;

    // 重写了组件的样式
    .step-menu-wrapper {
      li {
        width: 270px;
        padding: 0;
        a {
          display: inline-block;
          padding: 30px 0 10px;
          width: 100%;
        }
      }
    }


    .step-content-wrapper {
      padding: 40px 0;
      margin-left: 270px;
      .step-content-list {
        max-width: 1000px;
        margin: 0 auto;
        .content-item {
          display: none;
          line-height: 30px;

          &.show {
            display: block;
          }
        }
      }
    }
  }

}

@media screen and (max-width: 992px) {
  .step-tabs-wrapper {
    .step-head {
      padding-left: 25px;
      padding-right: 25px;
    }
    .step-content-main {
      padding: 0 25px;
      // 重写了组件的样式
      .step-menu-wrapper {
        li {
          width: 260px;
        }
      }
      .step-content-wrapper {
        margin-left: 185px;
      }
    }
  }
}

@media screen and (max-width: 767px) {
  .step-tabs-wrapper {
    .step-head {
      padding: 40px 25px 30px;
    }
    .step-content-main {
      padding: 25px 0;

      .step-content-menu {
        display: none;
        // 重写了组件的样式
        .step-menu-wrapper {
          li {
            width: 260px;
          }
        }
      }

      .step-content-wrapper {
        margin-left: 0;
      }
    }
  }
}
